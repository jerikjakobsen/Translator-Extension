{
    "name": "Translator",
    "version": "1.0",
    "manifest_version": 3,
    "action": {},
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts" : [
      {
        "matches": [ "<all_urls>" ],
        "css": ["/static/css/main.css", "/static/css/content.css"],
        "js": ["/static/js/content.js"]
      }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/static/css/content.css", "/static/media/*"],
      "matches": ["<all_urls>"]
    }
  ]
}